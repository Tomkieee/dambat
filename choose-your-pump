<script>
  // funkcja do przypisania eventów
  function initFAQ() {
    document.querySelectorAll(".faq-question").forEach(function (q) {
      if (!q.classList.contains("faq-initialized")) {
        q.classList.add("faq-initialized");
        q.addEventListener("click", function () {
          this.classList.toggle("active");
          var answer = this.nextElementSibling;
          answer.style.display = answer.style.display === "block" ? "none" : "block";
        });
      }
    });
  }

  // uruchomienie po załadowaniu strony
  document.addEventListener("DOMContentLoaded", initFAQ);

  // dodatkowo wymuszamy działanie na Shopify (przy AJAX-ie)
  document.addEventListener("shopify:section:load", initFAQ);
  document.addEventListener("shopify:section:unload", initFAQ);
</script>
